<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mentalhealth.mapper.UserMapper">
    <select id="queryUserByUsername" resultType="com.example.mentalhealth.entities.User">
        select * from user where username = #{username}
    </select>
    <select id="selectByQuery" resultType="com.example.mentalhealth.entities.User">
        SELECT * FROM user
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="email != null and email != ''">
                AND email LIKE CONCAT('%', #{email}, '%')
            </if>
            <if test="sex != null and sex != ''">
                AND sex = #{sex}
            </if>
        </where>
        ORDER BY creatTime DESC
    </select>

    <update id="updateUserByUsername">
        UPDATE user
        <set>
            <if test="user.password != null and user.password != ''">
                password = #{user.password},
            </if>
            <if test="user.sex != null and user.sex != ''">
                sex = #{user.sex},
            </if>
            <if test="user.email != null and user.email != ''">
                email = #{user.email},
            </if>
            <if test="user.phone != null and user.phone != ''">
                phone = #{user.phone}
            </if>
        </set>
        WHERE username = #{username}
    </update>

    <select id="queryUser" resultType="com.example.mentalhealth.entities.User">
        SELECT * FROM user
    </select>
</mapper>